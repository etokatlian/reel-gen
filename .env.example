# API Keys
HUGGINGFACE_API_KEY=your_huggingface_api_key
OPENAI_API_KEY=your_openai_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key  # Optional: Only needed for ElevenLabs TTS

# Feature Toggles
VIDEO_ENABLED=true
EXTRACTION_ENABLED=false  # Set to true to enable direct extraction approach
AI_VOICEOVER_ENABLED=true  # Enable AI voiceover

# Video Settings
VIDEO_DURATION=30  # Duration of generated video in seconds
IMAGES_TO_GENERATE=3  # Number of images to generate
OUTPUT_DIRECTORY=output  # Directory to store output files

# Direct Extraction Settings
CLIP_DURATION=5
EXTRACTION_QUALITY=medium  # low, medium, high
REMOVE_AUDIO=false
REMOVE_SUBTITLES=false
MANUAL_TIMESTAMP_ENTRY=false

# Audio Settings
USE_CUSTOM_SOUNDTRACK=true
SOUNDTRACK_PATH=audio/slowlife.mp3
SOUNDTRACK_VOLUME=0.5  # 0.0-1.0

# Voiceover Settings
VOICEOVER_TTS_SERVICE=openai  # openai or elevenlabs
VOICEOVER_VOICE=alloy  # OpenAI: alloy, echo, fable, onyx, nova, shimmer
VOICEOVER_VOLUME=0.8  # 0.0-1.0
VOICEOVER_DURATION_RATIO=0.93  # Ratio of voiceover duration to video duration (e.g., 0.93 = 14s for 15s video)

# Advanced Settings
WORD_COUNT_BUFFER_FACTOR=0.98  # Buffer factor for word count calculation (0.0-1.0)