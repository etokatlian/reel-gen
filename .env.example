# Choose one of two approaches:

# Approach 1: AI-generated content
# Required for image generation
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# Optional for content analysis
OPENAI_API_KEY=your_openai_api_key_here
# Optional for video creation (requires FFmpeg to be installed)
VIDEO_ENABLED=true

# Approach 2: Direct video extraction
# Set this to true to use direct extraction instead of AI generation
EXTRACTION_ENABLED=true
# Duration of each extracted clip in seconds (default: 5)
CLIP_DURATION=5
# Quality of extraction (low, medium, high)
EXTRACTION_QUALITY=medium
# Set to true to remove audio from extracted clips
REMOVE_AUDIO=false
# Set to true to remove subtitles/text from extracted clips
REMOVE_SUBTITLES=false

# Custom Soundtrack Options
# Set to true to add a custom soundtrack to generated videos
USE_CUSTOM_SOUNDTRACK=true
# Path to the soundtrack file (default: audio/slowlife.mp3)
SOUNDTRACK_PATH=audio/slowlife.mp3
# Volume level for the soundtrack (0.0-1.0, default: 0.5)
SOUNDTRACK_VOLUME=0.5